package ex04_logic;

public class Ex03_condition {

	public static void main(String[] args) {
		
		// 조건 연산
		// 1. 결과가 2개 이상인 경우(예: 점수에 따라 "합격", "불합격")에 사용한다.
		// 2. 3개의 항목이 사용되기 때문에 삼항 연산이라고도 한다.
		// 3. 형식
		//    비교연산 ? true : false
		//    점수>=60 ? 합격 : 불합격
		
		int score = 100;
		String res1 = score >= 60 ? "합격" : "불합격";
		
		System.out.println(res1);
		
		
		
		
		
		
		
		
		
		
		
		

	}

}
